<p id="notice"><%= notice %></p>

<div class="post-title"><%= link_to 'Blog', posts_path %> » <%= l @post.created_at, format: :post %> » <%= @post.title %></div>
<div class="post-content"><%= @post.content.html_safe %></div>

<% if is_admin? %>
  <p>
    <strong>Status:</strong>
    <%= @post.status %>
  </p>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Destroy', @post, method: :delete, data: {confirm: 'Are you sure?'} %> |
<% end %>
